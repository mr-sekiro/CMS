<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMS.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-light border-end" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom">
                <i class="bi bi-code-slash"></i> CMS
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action p-3" asp-controller="Home" asp-action="Index"><i class="bi bi-grid-1x2-fill me-2"></i> Dashboard</a>

                <!-- Project Management -->
                <a class="list-group-item list-group-item-action p-3 d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#projectCollapse" role="button">
                    <div><i class="bi bi-folder-fill me-2"></i> Project Management</div>
                    <span class="sidebar-arrow"><i class="bi bi-chevron-down"></i></span>
                </a>
                <div class="collapse" id="projectCollapse">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-controller="Projects" asp-action="Index">Projects Overview</a>
                        <a class="collapse-item" href="#">Gantt Charts</a>
                        <a class="collapse-item" href="#">Sprints</a>
                        <a class="collapse-item" href="#">Backlogs</a>
                    </div>
                </div>

                <!-- Task Management -->
                <a class="list-group-item list-group-item-action p-3 d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#taskCollapse" role="button">
                    <div><i class="bi bi-list-task me-2"></i> Task Management</div>
                    <span class="sidebar-arrow"><i class="bi bi-chevron-down"></i></span>
                </a>
                <div class="collapse" id="taskCollapse">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="#">Task List</a>
                        <a class="collapse-item" href="#">Kanban View</a>
                        <a class="collapse-item" href="#">Task Calendar</a>
                    </div>
                </div>

                <!-- Team Management -->
                <a class="list-group-item list-group-item-action p-3 d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#teamCollapse" role="button">
                    <div><i class="bi bi-people-fill me-2"></i> Team Management</div>
                    <span class="sidebar-arrow"><i class="bi bi-chevron-down"></i></span>
                </a>
                <div class="collapse" id="teamCollapse">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="#">Team Members</a>
                        <a class="collapse-item" href="#">Roles & Permissions</a>
                        <a class="collapse-item" href="#">Attendance</a>
                    </div>
                </div>

                <!-- Time Tracking -->
                <a class="list-group-item list-group-item-action p-3 d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#timeCollapse" role="button">
                    <div><i class="bi bi-clock-fill me-2"></i> Time Tracking</div>
                    <span class="sidebar-arrow"><i class="bi bi-chevron-down"></i></span>
                </a>
                <div class="collapse" id="timeCollapse">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="#">Timesheets</a>
                        <a class="collapse-item" href="#">Time Logs</a>
                        <a class="collapse-item" href="#">Weekly Reports</a>
                    </div>
                </div>

                <!-- Clients -->
                <a class="list-group-item list-group-item-action p-3 d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#clientCollapse" role="button">
                    <div><i class="bi bi-person-rolodex me-2"></i> Clients</div>
                    <span class="sidebar-arrow"><i class="bi bi-chevron-down"></i></span>
                </a>
                <div class="collapse" id="clientCollapse">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-controller="Clients" asp-action="Index">Client List</a>
                        <a class="collapse-item" href="#">Client Projects</a>
                        <a class="collapse-item" href="#">Communications</a>
                    </div>
                </div>

                <!-- Reports & Analytics -->
                <a class="list-group-item list-group-item-action p-3 d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#reportsCollapse" role="button">
                    <div><i class="bi bi-bar-chart-line-fill me-2"></i> Reports & Analytics</div>
                    <span class="sidebar-arrow"><i class="bi bi-chevron-down"></i></span>
                </a>
                <div class="collapse" id="reportsCollapse">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="#">Project Reports</a>
                        <a class="collapse-item" href="#">Employee Performance</a>
                    </div>
                </div>

                <!-- Settings Section -->
                <a class="list-group-item list-group-item-action p-3 d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#settingsCollapse" role="button">
                    <div><i class="bi bi-gear-fill me-2"></i> Settings</div>
                    <span class="sidebar-arrow"><i class="bi bi-chevron-down"></i></span>
                </a>
                <div class="collapse" id="settingsCollapse">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-controller="UserManagement" asp-action="Index">User Management</a>
                        <a class="collapse-item" href="#">System Settings</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content Wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle"><i class="bi bi-list"></i></button>

                    <form class="d-none d-md-inline-block ms-3">
                        <div class="input-group">
                            <input class="form-control" type="text" placeholder="Search for Project" />
                            <button class="btn btn-outline-secondary" type="button"><i class="bi bi-search"></i></button>
                        </div>
                    </form>

                    <div class="ms-auto d-flex align-items-center">
                        <a href="#" class="btn btn-primary me-3">+ New Project</a>
                        <a href="#" class="nav-link text-secondary me-3"><i class="bi bi-bell-fill fs-5"></i></a>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
            <!-- Page content-->
            <main role="main" class="container-fluid p-4">
                @RenderBody()
            </main>

            <footer class="footer mt-auto bg-light border-top">
                <div class="container-fluid text-center">
                    <span class="text-muted">&copy; 2025 - Abdullah Hussein</span>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>